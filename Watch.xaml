<Window x:Class="InspectionReport.Watch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InspectionReport"
        mc:Ignorable="d"
        Title="Просмотр" Height="450" Width="800" ShowActivated="False" Icon="logo.png" WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Button x:Name="close" Content="Закрыть" HorizontalAlignment="Left" Margin="350,377,0,0" VerticalAlignment="Top" Width="75" Click="close_Click"/>
        <ScrollViewer HorizontalAlignment="Left" Height="335" Margin="60,30,0,0" VerticalAlignment="Top" Width="705">
            <TextBlock x:Name="text" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" ScrollViewer.CanContentScroll="True"/>
        </ScrollViewer>

    </Grid>
</Window>
